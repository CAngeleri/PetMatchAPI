@model MomosMatch.Models.Pet
 @{

    var hasLiked = Model.LikeList.Any(l => l.UserId == Context.Session.GetInt32("UserId"));
}


<hr>

<div class="container p-4">
    <div class="d-flex justify-content-center">
        <img src="@Model.PhotoUrl" alt="@Model.Name" class="img-fluid mb-3" style="max-width: 100%;" />
        @if (hasLiked)
        {
            <div>

            </div>
        }
        else
        {
            <div>
            <form method="post" action="@Url.Action("Like", "Pet", new { PetId = Model.PetId })">
                <button type="submit" class="btn" class="likePaw"> 
                    <img src="/assets/hearts_2060959.png" alt="" class="img-fluid" style="width: 75px;">
                    <p>add like!</p>
                </button>
            </form>
            </div>
        }
    </div>
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="display-4 mt-2">@Model.Name</h1>
        </div>
    </div>
    <hr>
    <p><strong>Breed:</strong> @Model.Breed</p>
    <p><strong>Age:</strong> @Model.Age</p>
    <p><strong>Gender:</strong> @Model.Gender</p>
    <p><strong>Size:</strong> @Model.Size</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Health:</strong> @Model.Health</p>
    <p><strong>Vaccination Status:</strong> @Model.VaccinationStatus</p>
    <p><strong>Spayed/Neutered:</strong> @Model.SpayedNeutered</p>
    <p><strong>Posted:</strong> @Model.CreatedAt.ToString("MMMM dd, yyyy")</p>
    <div class="mt-3">


            
    <h5><strong>People who liked @Model.Name</strong></h5>
    <ul class="list-group">

    @foreach (var like in Model.LikeList)
    {
        <li class="list-group-item">@like.User.FirstName @like.User.LastName</li>
    }
    </ul>
    </div>

    <h3 class="mt-4">let's make this offical</h3>
    <hr>
    </p>
    <div class="text-center">
    <div>
        <a href="@Model.OrganizationLink">
            <img src="/assets/paw_7129299.png" alt="heart icon" class="img-fluid">
        </a>
    </div>
    <h4><strong>Organization Name:</strong> @Model.OrganizationName</h4>
    <p><strong>Press the heart apove to start the adoption process!</strong> 


    </div>


</div>
