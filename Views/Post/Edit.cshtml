@model MomosMatch.Models.Post

@{
    ViewData["Title"] = "Edit Blog Post";
}


<h2 class="text-center p-3">Edit Blog Post</h2>
<div class= "d-block justify-content-center">
<div class="p-4">

<h4>Post Details</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <textarea asp-for="PostDetails" class="form-control"></textarea>
                <span asp-validation-for="PostDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
</div>

<div>
</div>
</div>

</div>
