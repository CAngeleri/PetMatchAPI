@model MomosMatch.Models.Post

@{
    ViewData["Title"] = "Create Post";
}

<h1>Create Post</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="PostDetails" class="control-label"></label>
        <textarea asp-for="PostDetails" class="form-control"></textarea>
        <span asp-validation-for="PostDetails" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
