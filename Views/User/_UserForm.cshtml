@model MomosMatch.Models.User
<div class="userForm">


<div class="m-3"></div>
<h1 class="display-3 text-center">Register</h1>
<hr>
<form method="post" asp-action="CreateUser" class="form">
        <span class="mt-2 mb-3 text-danger" asp-validation-for="FirstName"></span>
    <div class="form-control d-flex justify-content-between mb-3">
        <input asp-for="FirstName" placeholder="Enter your first name" class="form-control-plaintext"/>
    </div>

        <span class="mt-2 text-danger" asp-validation-for="LastName"></span>
    <div class="form-control mb-3">
        <input asp-for="LastName" placeholder="Enter your last name" class="form-control-plaintext"/>
    </div>

        <span class="mt-2 text-danger" asp-validation-for="Email"></span>
    <div class="form-control mb-3">

        <input asp-for="Email" placeholder="Enter your email" class="form-control-plaintext"/>
    </div>

        <span class="mt-2 text-danger" asp-validation-for="Password"></span>
    <div class="form-control mb-3">
        <input asp-for="Password" placeholder="Enter your unique password" class="form-control-plaintext" type="password"/>
    </div>

        <span class="mt-2 text-danger" asp-validation-for="ConfirmPassword"></span>
    <div class="form-control mb-3">
        <input asp-for="ConfirmPassword" placeholder="Pleaes confirm, must match the password above" class="form-control-plaintext" type="password"/>
    </div>

    
    
        <button type="submit" class="btn btn-outline-secondary btn-block">Register</button>
</form>
</div>
